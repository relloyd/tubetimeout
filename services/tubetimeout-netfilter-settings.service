[Unit]
Description=Apply additional sysctl settings after boot
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'modprobe nf_conntrack; /sbin/sysctl -w net.netfilter.nf_conntrack_max=262144; /sbin/sysctl -w net.netfilter.nf_conntrack_buckets=65536; /sbin/sysctl -w net.ipv6.conf.eth0.disable_ipv6=1'

[Install]
WantedBy=multi-user.target
